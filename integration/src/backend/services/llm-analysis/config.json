{
  "prompt": "explain",
  "fault_trigger_consecutive_step": 6,
  "topkfeatures": 10,
  "pca_window_size": 20,
  "decimation_N": 1,
  "llm_min_interval_seconds": 60,
  "anomaly_threshold": 0.05,
  "models": {
    "anthropic": {
      "api_key": "${ANTHROPIC_API_KEY}",
      "model_name": "claude-3-5-sonnet-20241022",
      "enabled": true
    },
    "gemini": {
      "api_key": "${GOOGLE_API_KEY}",
      "backup_api_key": "${GOOGLE_API_KEY_BACKUP}",
      "model_name": "gemini-1.5-flash",
      "enabled": true,
      "auto_failover": true
    }
  },
  "analysis": {
    "threshold": 0.01,
    "window_size": 100,
    "min_samples": 10,
    "pca_components": 10
  },
  "lmstudio": {
    "enabled": true,
    "base_url": "http://127.0.0.1:1234/v1",
    "model_name": "mistral-small",
    "api_key": "not-needed"
  },
  "logging": {
    "level": "INFO",
    "file": "llm_analysis.log"
  }
}